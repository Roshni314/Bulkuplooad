<p id="notice"><%= notice %></p>

<h1>Items</h1>
<h2><%=
  link_to 'Download as Excel',
  items_path(format: :xlsx)
%><br></h2>
<h2><%=
  link_to 'Upload from Excel',
  new_items_import_path
%><h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to "Destroy", item_path(item), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to 'New Item', new_item_path %></h2>
